<body>
    <div class="container">
        <div class="row">
            <section class="top_section mt-5">
        <div id="main_content_picture">
            <img src="/uploads/{{this.image_card}}" id="main_picture_detail" alt="">
        </div>
        <div id="content_information">
            <div class="duration_information">
                <div id="duration_title"><h3>Duration</h3></div>
                <div id="date_information">
                    <div id="date_icon">
                        <i class="fa-solid fa-calendar-days fa-2x"></i>
                    </div>
                    <div id="output_start_date">
                        <h4>{{data.startDate}}</h4>
                    </div>
                    <div id="range_icon">
                        <h4>-</h4>
                    </div>
                    <div id="output_end_date">
                        <h4>{{data.endDate}}</h4>
                    </div>
                </div>
                <div id="time_information">
                    <div id="time_icon">
                        <i class="fa-solid fa-hourglass fa-2x"></i>
                    </div>
                    <div id="output_duration">
                        <h4>{{data.duration}} month(s)</h4>
                    </div>
                </div>
            </div>
            <div class="technologies_information">
                <div id="language_title">
                    <h3>Technologies</h3>
                </div>
                <div id="language_information">
                    <div id="output_language_detail">
                        <div id="node_output">
                            <i class="fa-brands fa-node-js fa-2x"></i>
                            <h4 id="node_js_title">Node Js</h4>
                        </div>
                        <div id="react_output">
                           <i class="fa-brands fa-react fa-2x"></i>
                            <h4 id="react_js_title"> React Js</h4>
                        </div>
                        <div id="vue_output">
                            <i class="fa-brands fa-vuejs fa-2x"></i>
                            <h4 id="vue_js_title">Vue Js</h4>
                        </div>
                        <div id="angular_output">
                            <i class="fa-brands fa-angular fa-2x"></i>
                            <h4 id="angular_js_title">Angular Js</h4>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="bottom_section">
       <p>{{data.description}}    </p>

    </section>
        </div>
        </div>
























</body>